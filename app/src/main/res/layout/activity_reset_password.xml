<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ResetPasswordActivity">


    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            style="@style/AppTheme.Toolbar.White"
            android:layout_gravity="top"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingRight="32dp"
            android:paddingLeft="32dp">

        <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AppTheme.TextView.Title"
                android:text="Reset Password"
                android:layout_marginBottom="8dp"/>

        <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AppTheme.TextView.Subtitle"
                android:text="Silahkan tulis alamat email anda dengan benar"
                android:layout_marginBottom="16dp"/>

        <com.tbhero.application.components.EditTextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:editTextInputType="textEmailAddress"
                app:editTextHint="Email"
                app:editTextDrawableLeft="@drawable/ic_mail_grey_16dp"
                android:layout_marginBottom="16dp"/>

        <com.tbhero.application.components.ButtonView
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:buttonName="Reset"/>

    </LinearLayout>

</FrameLayout>