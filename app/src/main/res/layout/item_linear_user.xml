<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/expand"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_down_grey_24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="16dp"/>

            <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Gucci Gang"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/expand"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="16sp"/>

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
                android:id="@+id/expanded_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginBottom="16dp"/>

            <TextView
                    android:id="@+id/born"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6 Januari 1963"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"/>

            <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jl Bunga Anggrek 01 RT/RW 001/002"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"/>

            <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="082127014950"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"/>

            <TextView
                    android:id="@+id/phase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fase Awal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>